<reference id="r_buildcommentscollection_site_method">
  <title>buildCommentsCollection Site Method</title>
  <shortdesc>Returns a Collection object instantiated as a Comments type. Run createOrUpdate() from
    the Collection object to complete the build process.</shortdesc>
  <prolog>
    <metadata>
      <othermeta name="solution" content="Experience Manager"/>
    </metadata>
  </prolog>
  <refbody>
    <properties id="properties_gq4_jyf_5y">
      <prophead>
        <proptypehd>Variable</proptypehd>
        <propvaluehd>Type</propvaluehd>
        <propdeschd>Description</propdeschd>
      </prophead>
      <property>
        <proptype><varname>title</varname></proptype>
        <propvalue>String</propvalue>
        <propdesc>
          <p>The title for the Collection.</p>
        </propdesc>
      </property>
      <property>
        <proptype><varname>articleId</varname></proptype>
        <propvalue>String</propvalue>
        <propdesc>A unique article ID you chose to identify a Collection within your
          site.</propdesc>
      </property>
      <property>
        <proptype><varname>url</varname></proptype>
        <propvalue>String</propvalue>
        <propdesc>The canonical absolute URL for this Collection.</propdesc>
      </property>
    </properties>
    <section id="section_nyl_ycs_rz">
      <title>Java Example</title>
      <codeblock>Collection collection = site.buildCommentsCollection(title, articleId, url);</codeblock>
    </section>
